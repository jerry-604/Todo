<%- include('header.ejs') -%>
    <div class="box" id="heading">
        <h1>
            <%=day%>
        </h1>
    </div>
    <div class="box">
        <%for (i=0; i<todo.length; i++){%>
            <form action="/delete" method="post">
                <div class="item">
                    <input type="checkbox" name="todo" value='<%= todo[i]._id%>' onchange="this.form.submit()">
                    <p>
                        <%= todo[i].name%>
                    </p>
                </div>
                <%}%>
                    <input type="hidden" name="listname" value="<%=type%>">

            </form>
            <form class="item" action="/" method="post">
                <input type="text" name="newtodo" placeholder="Add new To-do" autofocus>
                <button type="submit" name="list" value='<%=type%>'>+</button>
            </form>
    </div>
    <%- include('footer.ejs') -%>